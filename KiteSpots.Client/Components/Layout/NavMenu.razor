@using KiteSpots.Client.Services
@using Common.DTO
@inject NavigationManager NavigationManager
@inject SpotService spotService

<div class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a href="/">
        <h1 class="text-white mr-3">Spotguide</h1>
    </a>
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <label for="Area">Välj område</label>
                <select name="Area" id="AreaSelector">
                    @foreach (var spot in spots)
                    {
                        <option value="@spot.Area">@spot.Area</option>
                    }
                </select>
                <li class="nav-item">
                    <form class="form-inline">
                        @foreach (var spot in spots)
                        {
                            foreach (var property in spot.Properties)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="@($"propCheckbox_{property}")">
                                    <label class="form-check-label" for="@($"propCheckbox_{property}")">@property</label>
                                </div>
                            }
                        }
                    </form>
                </li>
                <li class="nav-item">
                    <form class="form-inline">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="AllCheckbox" checked>
                            <label class="form-check-label" for="AllCheckbox">Alla</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="southwestCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">SV</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="southCheckbox">
                            <label class="form-check-label" for="scenicCheckbox">S</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="southEastCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">SO</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="eastCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">O</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="northEastCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">NO</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="northCheckbox">
                            <label class="form-check-label" for="scenicCheckbox">N</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="northWestCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">NV</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="westCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">V</label>
                        </div>
                    </form>
                </li>
            </ul>
        </div>
    </div>
    <AuthorizeView>
        <Authorized>
            <div class="btn btn-success active-user">
                <NavLink class="nav-link text-white" href="/Admin">Admin</NavLink>
            </div>
            <NavLink class="nav-link text-white" href="/Logout">Logga ut</NavLink>
        </Authorized>
        <NotAuthorized>
            <NavLink class="nav-link text-white" href="/Account/Login">Logga in</NavLink>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private List<SpotDTO> spots = new List<SpotDTO>();

    protected override async Task OnInitializedAsync()
    {
        spots.AddRange(await spotService.GetAllSpots());
    }
}

