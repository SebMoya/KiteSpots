@inject NavigationManager NavigationManager


<div class="navbar navbar-expand-lg navbar-dark bg-primary">
    <h1 class="text-white mr-3">Spotguide</h1>
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <AuthorizeView Roles="Admin">
                    <li class="nav-item">
                        <a class="px-3 text-white text-decoration-none" href="Admin">Administration</a>
                    </li>
                </AuthorizeView>
                <label for="Area">Välj område</label>
                <select name="Area" id="AreaSelector">
                    <option value="Skane">Skåne</option>
                    <option value="VastaGotaland">Västra Götaland</option>
                    <option value="Gotland">Gotland</option>
                    <option value="Halland">Halland</option>
                </select>
                <li class="nav-item">
                    <form class="form-inline">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sandyCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">Sandy</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="scenicCheckbox">
                            <label class="form-check-label" for="scenicCheckbox">Scenic</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="relaxingCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">Relaxing</label>
                        </div>
                    </form>
                </li>
                <li class="nav-item">
                    <form class="form-inline">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="AllCheckbox" checked>
                            <label class="form-check-label" for="sandyCheckbox">Alla</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="southwestCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">SV</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="southCheckbox">
                            <label class="form-check-label" for="scenicCheckbox">S</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="southEastCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">SO</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="eastCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">O</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="northEastCheckbox">
                            <label class="form-check-label" for="sandyCheckbox">NO</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="northCheckbox">
                            <label class="form-check-label" for="scenicCheckbox">N</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="northWestCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">NV</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="westCheckbox">
                            <label class="form-check-label" for="relaxingCheckbox">V</label>
                        </div>
                    </form>
                </li>
            </ul>
        </div>
    </div>
    <a class="text-white ml-1 text-decoration-none" href="Auth"><h4>Logga in</h4></a>
</div>

